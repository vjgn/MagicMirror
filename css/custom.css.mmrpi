} */

.CX2 .slot .timeline .timelineSleeve .event {
    padding: 0;   
}

.CX2 .slot .timeline .timelineSleeve .notfullday .eventMain {
    height: 30px;   
}

.CX2 .slot .timeline .timelineSleeve .notfullday .eventMain .eventTitle {
    overflow: visible;
    text-overflow: clip;
    white-space: normal;
    font-size: 12px;
}

.CX2 .slot .timeline .timelineSleeve .fullday {
    background-color: rgb(0, 255, 149);
}

.CX2 .slot .timeline .timelineSleeve .fullday .eventMain {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 12px;
}

