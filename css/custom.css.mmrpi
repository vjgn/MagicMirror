
body, html {
    color: #fff;
    -webkit-font-smoothing: antialiased;
    text-shadow: 1px 1px 0px rgba(0,0,0,.3);
}

.region .top {
    z-index: 1000;
}
.currentweather .normal,
.currentweather .dimmed {
    color: #fff;
}

.CX2 .slot .slotFooter {
	display: none;
}

.CX2 .event {
    background: none;
}

.CX2 .event .eventTitle {
    font-weight: 400;
}

.CX2 .event.passed::before {
    background: none;
}

/* .CX2 .slot .slotHeader .slotTitle,
.CX2 .slot .slotHeader .slotAltTitle,
